doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Doctor Sign-up
    style.
      body {
          font-family: Arial, sans-serif;
          margin: 20px;
      }
      form {
          max-width: 400px;
          margin: 0 auto;
      }
      label {
          display: block;
          margin-bottom: 8px;
      }
      input, select {
          width: 100%;
          padding: 8px;
          margin-bottom: 16px;
          box-sizing: border-box;
      }
      button {
          background-color: #4CAF50;
          color: white;
          padding: 10px 15px;
          border: none;
          border-radius: 4px;
          cursor: pointer;
          transition: background-color 0.3s;
      }
      button:hover {
          background-color: #45a049;
      }
      .login-link {
          margin-top: 10px;
          text-align: center;
      }
      .login-link a {
          color: #3498db;
          text-decoration: none;
      }
      .login-link a:hover {
          text-decoration: underline;
      }
  body
    form(action='process_doctor_signup.php', method='post')
      h2 Doctor Sign-up

      label(for='doctorName') Doctor's Name:
      input(type='text', id='doctorName', name='doctorName', required)

      label(for='email') Email Address:
      input(type='email', id='email', name='email', required)

      label(for='password') Password:
      input(type='password', id='password', name='password', required)

      label(for='confirmPassword') Confirm Password:
      input(type='password', id='confirmPassword', name='confirmPassword', required)

      label(for='specialization') Specialization:
      select(id='specialization', name='specialization', required)
        option(value='surgeon') Surgeon
        option(value='dentist') Dentist
        option(value='gynecologist') Gynecologist
        option(value='pediatrician') Pediatrician

      label(for='gender') Gender:
      select(id='gender', name='gender', required)
        option(value='male') Male
        option(value='female') Female

      label(for='phoneNumber') Phone Number:
      input(type='tel', id='phoneNumber', name='phoneNumber', required)

      button(type='submit') Sign Up

      .login-link
        p Already have an account? 
        a(href='/login') 
          button(type='button') Login
